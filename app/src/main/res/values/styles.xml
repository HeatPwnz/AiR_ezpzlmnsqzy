<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Main activity -->

    <style name="ViewPagerStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_gravity">top</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="TabLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <!--<item name="android:background">@drawable/tab_layout_border</item>-->
        <item name="android:paddingBottom">5px</item>
        <item name="android:paddingTop">5px</item>
    </style>

    <style name="SingleTabIconStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">4dp</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="Widget.AppCompat.Light.ActionBar.TabText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">11sp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@drawable/tab_layout_text_selector</item>
    </style>

    <!--fragments -->

    <style name="RecyclerViewStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/recyclerViewBackgroundColor</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <style name="NoAssignedItemsFoundTextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/empty_rv_list</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_centerInParent">true</item>
        <item name="android:visibility">gone</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
