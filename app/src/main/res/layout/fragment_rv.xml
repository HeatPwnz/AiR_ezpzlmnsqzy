<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="co.infinum.heat.air.fragments.RecyclerViewFragment">

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/tasks_swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/tasks_recycler_view"
            style="@style/RecyclerViewStyle"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <TextView
        android:id="@+id/empty_tasks_info"
        style="@style/NoAssignedItemsFoundTextView"
        android:text="@string/empty_rv_list"/>

</RelativeLayout>